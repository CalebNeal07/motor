---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
<main class="flex flex-col justify-center items-center">
  <div class="flex flex-row">
    <h1 class="px-5 text-4xl text-purple-400">BLDC Motor Sim</h1>
    <div class="rounded-md shadow-md border border-gray-300">
      <nav class="flex">
        <a href="" class="px-6 py-3 border-r bg-teal-700 border-gray-300 text-gray-300 rounded-l-md font-medium">Flywheel</a>
        <a href="./elevator" class="px-6 py-3 border-r border-gray-300 text-gray-500 hover:bg-gray-800 hover:text-gray-300 font-medium">Elevator</a>
        <a href="./arm" class="px-6 py-3 text-gray-500 hover:bg-gray-800 hover:text-gray-300 rounded-r-md font-medium">Arm</a>
      </nav>
    </div>
  </div>
  <hr class="border-teal-700 border-[2px] rounded-sm m-6 w-[80vw]" />
  <div>
	<canvas class="bg-purple-400 w-[40vw] h-[80vh]"></canvas>
  </div>
</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
</style>
